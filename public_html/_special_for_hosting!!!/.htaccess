AddDefaultCharset UTF-8
php_flag display_errors on
php_value error_reporting -1;


<IfModule mod_rewrite.c>
    Options +FollowSymLinks
    RewriteEngine On
    RewriteBase /

    RewriteRule ^123$ https://excurs-orel.ru/afisha/ [L,R=301]

    RewriteRule ^photo/(.*) https://excurs-orel.ru/files/$1 [L,R=301]

    # Переводим URL в нижний регистр
    RewriteCond %{REQUEST_URI} [A-Z]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule . strtolower.php [L]

    # http -> https
    RewriteCond %{SERVER_PORT} !^443$
    RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [R=301,L]

</IfModule>

# Serve Images with correct Mime Type
<IfModule mod_deflate.c>
    AddType x-font/woff .woff
    AddType image/webp .webp
</IfModule>

# Setup Cache 
# Expires Headers — A2592000 = 30 days 

<FilesMatch "\.(html|htm)$">
    AddDefaultCharset UTF-8
<ifModule mod_headers.c>
    FileETag None
    Header unset ETag
    Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "Mon, 29 Oct 1923 20:30:00 GMT"
</ifModule>
</FilesMatch>

<FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|webp|js|css|swf|x-html|css|xml|js|woff|woff2|ttf|svg|eot)(\.gz)?$">
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css A2592000
    ExpiresByType text/javascript A2592000
    ExpiresByType application/x-javascript A2592000
    ExpiresByType image/jpeg A2592000
    ExpiresByType image/png A2592000
    ExpiresByType image/webp A2592000
    ExpiresByType image/svg+xml A2592000
    ExpiresByType image/gif A2592000
    ExpiresByType image/font-woff A2592000
    ExpiresByType image/font-woff2 A2592000
</IfModule>
<IfModule mod_headers.c>
    Header set Expires "max-age=2592000, public"
    Header unset ETag
    Header set Connection keep-alive
    FileETag None
</IfModule>
</FilesMatch>

# Cache-Control: max-age=31536000 

# BEGIN WordPress
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.php$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.php [L]
</IfModule>
# END WordPress